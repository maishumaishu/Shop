{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": false,
        "outDir": "../../www",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "../",
        "paths": {
            "*": [
                "lib/*"
            ],
            "mobileComponents/*": [
                "user/mobileComponents/*"
            ],
            "virtualMobile": [
                "admin/modules/station/components/virtualMobile"
            ],
            "adminComponents/*": [
                "admin/components/*"
            ],
            "adminServices/*": [
                "admin/services/*"
            ],
            "userServices/*": [
                "user/userServices/*",
                "user/services/*"
            ]
        },
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "scripthost",
            "es2015"
        ]
    },
    "include": [

        "../lib/*.d.ts",
        "../lib/typings/*.d.ts",
        "../lib/typings/**/*.d.ts",

        "../share/*.ts",
        "../share/**/*.ts",

        "references.d.ts",

        "../user/mobileComponents/*",
        "../user/serverPing.ts",

        "*.tsx",
        "**/*.tsx",
        "*.ts",
        "**/*.ts"
    ]
}