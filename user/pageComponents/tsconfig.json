{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": false,
        "outDir": "../../www",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "../../",
        "inlineSourceMap": false,
        "paths": {
            "*": [
                "lib/*",
                "../../www/user/*"
                // "../*"
            ],
            "chitu.mobile": [
                "lib/chitu.mobile.d.ts"
            ],
            "formValidator": [
                "lib/formValidator.d.ts"
            ],
            "services/*": [
                "admin/services/*"
            ],
            "mobileComponents/*": [
                "user/pageComponents/*"
            ]
        },
        "declaration": false,
        "experimentalDecorators": true
    },
    "exclude": [
        "dest",
        "../references.d.ts"  
    ],
    "include": [
        "../../lib/typings",
        "../../lib/*.d.ts",
        "../../share/*.ts",
        "../services/*.ts",
        "./*",  
        "**/*.tsx"
    ]
}